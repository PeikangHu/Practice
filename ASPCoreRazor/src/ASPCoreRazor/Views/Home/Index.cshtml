@model Product
@{
	//Layout = "_BasicLayout"; Do not need it anymore because _ViewStart.cshtml.
	ViewBag.Title = "Product Name";
 }
<div data-productid="@Model.ProductID" dtat-stocklevel="@ViewBag.StockLevel">
	<p>Product Name: @Model.Name</p>
	<p>Product Price:@($"{Model.Price:C2}")</p>
	<p>Stock Level:
		@* Need to be casted for using. *@
		@switch ((int)ViewBag.StockLevel)   
		{
			case 0: @: Out of Stock
			break;
			case 1:
			case 2:
			case 3:
				<b>Low Stock (@ViewBag.StockLevel)</b>
				break;
			default:
				@: @ViewBag.StockLevel in Stock
				break;
		}
	</p>
</div>